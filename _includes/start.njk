---
layout: base.njk
---
{{ content | safe }}
<div class="row">
{% for post in collections.posts | reverse | limit (4) %}<div class="c g2">
<h3><a href="{{post.url}}">{{post.data.title}}</a></h3>
<p><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("dd LLLL yyyy") }}</time></p>
<p>{{post.data.description}}</p>
<p>By <a href="{{metadata.author.url}}">{{metadata.author.name}}</a></p>
</div>{% endfor %}
</div>
<a href="/blog" class="non s">Explore all post</a>
